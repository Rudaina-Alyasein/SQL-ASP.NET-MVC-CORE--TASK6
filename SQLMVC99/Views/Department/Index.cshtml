@model List<Department>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2>User List</h2>

        <a href="@Url.Action("Create", "Department")" class="btn btn-primary mb-3">Add New Department</a>

        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>name</th>
                    <th>manager</th>
                    <th>Location</th>
                    <th>CreatedDate</th>


                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model)
                {
                    <tr>
                        <td>@department.Name</td>
                        <td>@department.Manager</td>
                        <td>@department.Location </td>

                        <td>@department.CreatedDate</td>

                        <td>
                            <a href="@Url.Action("Edit", "Department", new { id = department.Id })" class="btn btn-warning">Edit</a>

                            <a href="@Url.Action("Delete", "Department", new { id = department.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>



</body>
</html>
